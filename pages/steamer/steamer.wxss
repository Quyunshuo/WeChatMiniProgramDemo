/* pages/steamer/steamer.wxss */
swiper,
swiper image {
  width: 100%;
  height: 400rpx;
}

.menu {
  flex-wrap: wrap;
  justify-content: space-between;
}

.menu .menu-item {
  width: 21vw;
  height: 21vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.menu .menu-item image {
  width: 65%;
  height: 65%;
  border-radius: 5px;
}

.menu .menu-item view,
navigator {
  font-size: 13px;
  margin-top: 2px;
}