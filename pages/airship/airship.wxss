/* pages/airship/airship.wxss */
.tab {
  display: flex;
}

.tab view {
  flex: 1;
  text-align: center;
  padding: 20rpx;
}

.tab view.active {
  border-bottom: 4rpx solid red;
}

.text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.shadow {
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shadow image {
  width: 60%;
}

.shadow .close {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #fff;
  color: #fff;
  border-radius: 50%;
  position: absolute;
  top: 15%;
  right: 10%;
  text-align: center;
  line-height: 35rpx;
}