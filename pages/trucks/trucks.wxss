/* pages/trucks/trucks.wxss */
.item {
  display: flex;
  border-bottom: 2px dashed rgb(190, 187, 187);
  padding: 20rpx;
}

.item image {
  width: 25px;
  height: 25px;
  margin-top: 9px;
}

.conuter {
  display: flex;
  margin-top: 10rpx;
}

.conuter view {
  width: 60rpx;
  height: 60rpx;
  line-height: 62rpx;
  text-align: center;
  border: 2rpx solid transparent;
}

.conuter .btn.add {
  background: skyblue;
  color: white;
  line-height: 55rpx;
  border-radius: 50%;
}

.conuter .btn.jian {
  border: 2rpx solid skyblue;
  color: skyblue;
  line-height: 55rpx;
  border-radius: 50%;
}

.main {
  width: 17vw;
  margin: 0 30rpx;
}

.desc {
  font-size: 26rpx;
  color: #ccc;
}

.univalence {
  width: 35vw;
  margin-top: 18rpx;
  text-align: center;
}

.footer {
  height: 120rpx;
  background: #eee;
  position: fixed;
  width: 100%;
  bottom: 0;
  align-items: center;
  display: flex;
  justify-content: space-between;
}

.footer .btn {
  background: skyblue;
  height: 100%;
  color: white;
  padding: 0 100rpx;
  line-height: 120rpx;
}

.checkAll {
  width: 50rpx;
  height: 50rpx;
  padding-left: 30rpx;
}